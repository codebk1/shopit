{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor",
    ":disableDependencyDashboard",
    ":semanticCommitTypeAll(chore)",
    ":pinAllExceptPeerDependencies"
  ],
  "ignorePaths": [
    "android/**",
    "ios/**",
    "linux/**",
    "windows/**",
    "macos/**"
  ]
}